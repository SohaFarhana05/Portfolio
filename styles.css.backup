/* Final Mobile Navigation & UX Enhancements */

/* Mobile navigation improvements */
@media (max-width: 768px) {
    #header {
        flex-wrap: wrap;
        justify-content: center;
        padding: 0.8rem 0.5rem;
        gap: 0.8rem;
    }
    
    #header a {
        font-size: 0.85rem;
        padding: 0.6rem 1rem;
        border-radius: 20px;
        background: rgba(52, 152, 219, 0.1);
        transition: all 0.3s ease;
    }
    
    #header a:hover,
    #header a.active {
        background: rgba(52, 152, 219, 0.2);
        transform: translateY(-2px);
    }
    
    .dark-theme #header a {
        background: rgba(116, 185, 255, 0.1);
    }
    
    .dark-theme #header a:hover,
    .dark-theme #header a.active {
        background: rgba(116, 185, 255, 0.2);
    }
}

/* Touch-friendly interactions */
@media (hover: none) and (pointer: coarse) {
    .project-item:hover,
    .certificate-card:hover,
    .institution-card:hover {
        transform: none;
    }
    
    .project-item:active,
    .certificate-card:active,
    .institution-card:active {
        transform: scale(0.98);
    }
    
    .tech-tag:hover {
        transform: none;
    }
    
    .tech-tag:active {
        transform: scale(0.95);
    }
}

/* Improved scrolling on mobile */
html {
    scroll-behavior: smooth;
}

body {
    -webkit-overflow-scrolling: touch;
}

/* Better button accessibility on mobile */
.cta-button,
.project-link,
.profile-link {
    min-height: 44px;
    min-width: 44px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

/* Prevent horizontal scroll on mobile */
body {
    overflow-x: hidden;
}

.projects-container,
.home-container,
.about-intro,
.education-container,
.contact-container {
    max-width: 100%;
    overflow-x: hidden;
}

/* Theme switch mobile positioning */
@media (max-width: 480px) {
    .theme-switch-wrapper {
        bottom: 15px;
        right: 15px;
        padding: 8px;
    }
    
    .theme-switch {
        width: 50px;
        height: 28px;
    }
    
    .slider:before {
        height: 22px;
        width: 22px;
        left: 3px;
        bottom: 3px;
    }
    
    input:checked + .slider:before {
        transform: translateX(22px);
    }
}

/* Performance optimizations for mobile */
.project-item,
.certificate-card,
.institution-card,
.participation-card {
    will-change: transform;
    backface-visibility: hidden;
    transform: translateZ(0);
}

/* Focus states for better accessibility */
button:focus,
a:focus,
input:focus {
    outline: 2px solid #3498db;
    outline-offset: 2px;
}

.dark-theme button:focus,
.dark-theme a:focus,
.dark-theme input:focus {
    outline-color: #74b9ff;
}

/* Optimize for high DPI displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    .profile-image,
    .about-photo,
    .institution-logo {
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
    }
}